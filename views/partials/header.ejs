        <script src='https://cdn.plot.ly/plotly-latest.min.js'></script>
      
    </head>    
    <body>

        <nav class="navbar navbar-expand-md  p-3 bg-dark" id="mainNavbar">
            <a class="navbar-brand" id="brand" href="/">  EasyView <i class="far fa-eye"></i></a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
            </button>
          <div class="collapse navbar-collapse justify-content-end" id="navbarSupportedContent">
            <ul class="navbar-nav ">
                
                <li class="nav-item active">
                    <!-- <form action="/campgrounds" method="GET" class="form-inline">
                   <div class="form-group">
                       <input type="text" name="search" placeholder="Search..." class="form-control rounded-pill" >
                   </div>
                </form> -->
            </li>
            
            <% if(!currentUser){ %>
            
                <li class="nav-item active"><a class="nav-link nav-text btn  btn-sm rounded-pill mx-2 p-2 "  href="/admin/login">Log In<i class="ml-1 fas fa-user-check"></i></a></li>
                <li class="nav-item active"><a class="nav-link nav-text btn  btn-sm rounded-pill p-2 " href="/admin/register">Sign Up<i class=" ml-1 fas fa-user-plus"></i></a></li>
            <%  }else{ %>
                <li class="nav-item active"><a class="nav-link nav-text text-white mx-2">Signed in as <%= currentUser.username %></a></li>
                <li class="nav-item active"><a class="nav-link nav-text btn  btn-sm rounded-pill " href="/admin/logout">Logout  <i class="ml-2 fas fa-sign-out-alt"></i></a></li>
            <%  }  %>
        </ul>
       </div>
       <!--</div>-->
    </nav>

    <!-- flash messages -->
    <% if(error && error.length >0 ){%>
        <div class="container">
            <div class="alert alert-danger" role="alert">
                <%= error %>
            </div>
        </div>
        <% } %>
        <% if(success && success.length >0) {%>
        <div class="container">
            <div class="alert alert-success" role="alert">
                <%= success %>
            </div>
        </div>
        <% } %>